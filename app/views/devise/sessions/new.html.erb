<div class="max-w-sm mx-auto mt-10 p-5 border border-gray-400 rounded-lg bg-white">
  
  <h2 class="text-center p-5"><%= resource_name.capitalize %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-5">
      <%= f.label :email, class: 'block text-xs' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 text-lg border rounded" %>
    </div>

    <div class="mb-5">
      <%= f.label :password, class: 'block text-xs' %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 text-lg border rounded" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex mb-5 items-center">
        <%= f.check_box :remember_me, class: "mr-1" %>
        <%= f.label :remember_me, class: "text-xs" %>
      </div>
    <% end %>

    <div class="">
      <%= f.submit "Submit", class: "w-full p-2 text-white border border-blue-800 bg-blue-600 rounded hover:bg-blue-500 cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  
</div>
