<%= render 'shared/header', heading: 'Dashboard' %>

<div data-controller="course" data-course-teacher="<%= current_teacher.id %>" class="flex justify-between items-center max-w-screen-lg mx-auto mb-4 p-4 lg:p-0">
  <input type="text" data-target="course.name" class="w-full px-4 py-2 text-base rounded border border-gray-400">
  <button type="button" data-action="click->course#create" class="w-32 px-4 py-2 ml-2 border border-transparent text-sm leading-6 font-medium rounded text-white focus:outline-none focus:shadow-outline transition duration-150 ease-in-out bg-green-500 hover:bg-green-600">Add Course</button>
</div>

<%= render 'shared/courses', courses: @courses, columns: @columns %>